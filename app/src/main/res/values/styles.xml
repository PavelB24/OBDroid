<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NavigationDrawerStyle">

        <item name="android:textSize">50sp</item><!-- text size in menu-->

        <!-- item size in menu-->
        <item name="android:listPreferredItemHeightSmall">20dp</item>
        <item name="listPreferredItemHeightSmall">60dp</item>

        <!-- item padding left in menu-->
        <item name="android:listPreferredItemPaddingLeft">8dp</item>
        <item name="listPreferredItemPaddingLeft">8dp</item>

        <!-- item padding right in menu-->
        <item name="android:listPreferredItemPaddingRight">8dp</item>
        <item name="listPreferredItemPaddingRight">8dp</item>
    </style>


    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/blue</item>
    </style>
    
    
    <style name="DefaultSpeedometerStyle">
        <item name="backgroundColor">#514B4B</item>
        <item name="pointerColor">#FB430A</item>
        <item name="maxSpeed">180</item>
        <item name="backgroundAlpha">80</item>
        <item name="scaleColor">#ff0000</item>
        <item name="scaleAlpha">255</item>
        <item name="pointerAlpha">255</item>
        <item name="speedTextColor">#000000</item>
        <item name="speedTextAlpha">255</item>
    </style>
</resources>