<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/permissionsFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="ru.barinov.obdroid.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="ru.barinov.obdroid.SettingsFragment"
        android:label="SettingsFragment" >
        <action
            android:id="@+id/action_settingsFragment_to_profilesFragment"
            app:destination="@id/profilesFragment" />
    </fragment>
    <fragment
        android:id="@+id/connectionsFragment"
        android:name="ru.barinov.obdroid.ConnectionsFragment"
        android:label="ConnectionsFragment" />
    <fragment
        android:id="@+id/terminalFragment"
        android:name="ru.barinov.obdroid.TerminalFragment"
        android:label="TerminalFragment" />
    <fragment
        android:id="@+id/permissionsFragment"
        android:name="ru.barinov.obdroid.PermissionsFragment"
        android:label="PermissionsFragment" >
        <action
            android:id="@+id/action_permissionsFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/permissionsFragment"
            app:popUpToInclusive="true"
            />
    </fragment>
    <fragment
        android:id="@+id/profilesFragment"
        android:name="ru.barinov.obdroid.ProfilesFragment"
        android:label="ProfilesFragment" />
</navigation>