<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_common_background"
    app:layoutDescription="@xml/permissions_fragment_scene">

    <androidx.cardview.widget.CardView
        android:id="@+id/permissions_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="68dp"
        android:backgroundTint="@color/permission_root_colour"
        android:elevation="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@id/on_start_button_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bt_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bt_permission_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@id/bt_icon"
                app:layout_constraintStart_toEndOf="@id/bt_icon"
                app:layout_constraintTop_toTopOf="@id/bt_icon" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/bt_permission_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/bt_icon" />

            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bt_icon" />

            <TextView
                android:id="@+id/location_permission_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@id/location_icon"
                app:layout_constraintStart_toEndOf="@id/location_icon"
                app:layout_constraintTop_toTopOf="@id/location_icon" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/location_permission_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/location_icon" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="16dp"
                android:background="#7B000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/location_icon" />


            <ImageView
                android:id="@+id/file_system_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                app:layout_constraintBottom_toTopOf="@id/doze_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line" />

            <TextView
                android:id="@+id/file_system_permission_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@id/file_system_icon"
                app:layout_constraintStart_toEndOf="@id/file_system_icon"
                app:layout_constraintTop_toTopOf="@id/file_system_icon" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/file_system_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@id/file_system_icon"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/doze_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/doze_permission_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@id/doze_icon"
                app:layout_constraintStart_toEndOf="@id/doze_icon"
                app:layout_constraintTop_toTopOf="@id/doze_icon" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/doze_permission_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/on_start_button_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/on_start_button"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:layout_marginBottom="28dp"
            android:backgroundTint="@color/en_dis_button_selector"
            android:minHeight="70dp"
            android:visibility="invisible"
            app:cornerRadius="6dp"
            app:icon="@drawable/ic_menu_gallery" />

    </FrameLayout>


</androidx.constraintlayout.motion.widget.MotionLayout>