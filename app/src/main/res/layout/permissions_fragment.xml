<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_common_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/permissions_card"
        app:layout_constraintBottom_toTopOf="@id/on_start_button"
        android:layout_marginBottom="68dp"
        android:elevation="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="8dp"
        android:backgroundTint="#C0D4EF"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bt_icon"
                android:layout_margin="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />
            <TextView
                android:id="@+id/bt_permission_title"
                app:layout_constraintStart_toEndOf="@id/bt_icon"
                app:layout_constraintTop_toTopOf="@id/bt_icon"
                app:layout_constraintBottom_toBottomOf="@id/bt_icon"
                android:textSize="22sp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/bt_permission_switch"
                android:layout_width="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/bt_icon"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/location_icon"
                android:layout_margin="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bt_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />
            <TextView
                android:id="@+id/location_permission_title"
                app:layout_constraintStart_toEndOf="@id/location_icon"
                app:layout_constraintTop_toTopOf="@id/location_icon"
                app:layout_constraintBottom_toBottomOf="@id/location_icon"
                android:textSize="22sp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/location_permission_switch"
                android:layout_width="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/location_icon"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/location_icon"
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:background="@color/black"
                android:layout_height="1dp"/>


            <ImageView
                android:id="@+id/file_system_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/doze_icon"
                android:layout_margin="8dp"
                app:layout_constraintTop_toBottomOf="@id/line"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />
            <TextView
                android:id="@+id/file_system_permission_title"
                app:layout_constraintStart_toEndOf="@id/file_system_icon"
                app:layout_constraintTop_toTopOf="@id/file_system_icon"
                app:layout_constraintBottom_toBottomOf="@id/file_system_icon"
                android:textSize="22sp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/file_system_switch"
                android:layout_width="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@id/file_system_icon"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/doze_icon"
                android:layout_margin="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />
            <TextView
                android:id="@+id/doze_permission_title"
                app:layout_constraintStart_toEndOf="@id/doze_icon"
                app:layout_constraintTop_toTopOf="@id/doze_icon"
                app:layout_constraintBottom_toBottomOf="@id/doze_icon"
                android:textSize="22sp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/doze_permission_switch"
                android:layout_width="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"/>



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/on_start_button"
        android:layout_width="280dp"
        android:minHeight="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="28dp"
        android:enabled="false"
        app:icon="@drawable/ic_menu_gallery"
        android:backgroundTint="@color/en_dis_button_selector"
        app:cornerRadius="6dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>